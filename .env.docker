# .env.docker - Docker Environment Configuration
# Copy this to .env and customize for your deployment

# ============================================================
# OLLAMA CONFIGURATION
# ============================================================
OLLAMA_URL=http://ollama:11434
MODEL_NAME=llama3

# Alternative models (uncomment to use)
# MODEL_NAME=llama2:7b
# MODEL_NAME=llama3:70b
# MODEL_NAME=mistral
# MODEL_NAME=codellama

# ============================================================
# APPLICATION SETTINGS
# ============================================================

# Text Processing
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Search Settings
MAX_SEARCH_RESULTS=5
SEMANTIC_SEARCH_K=10

# Performance
ENABLE_CACHE=true
CACHE_DIR=/app/cache

# ============================================================
# FEATURE FLAGS
# ============================================================

# Enable/disable optional features
ENABLE_VOICE=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_ADVANCED_RAG=true
ENABLE_DOCUMENT_COMPARISON=true

# ============================================================
# UI SETTINGS
# ============================================================

# Default theme: dark or light
DEFAULT_THEME=dark

# ============================================================
# ADVANCED SETTINGS
# ============================================================

# LLM Settings
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1500
LLM_CONTEXT_WINDOW=8192

# Timeouts (seconds)
OLLAMA_TIMEOUT=120
SEARCH_TIMEOUT=30

# RAG Settings
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=100
RAG_TOP_K=5

# Knowledge Graph
KG_MAX_ENTITIES=100
KG_MIN_CONFIDENCE=0.5

# ============================================================
# LOGGING
# ============================================================

LOG_LEVEL=INFO
LOG_FILE=/app/logs/athena.log

# ============================================================
# RESOURCE LIMITS
# ============================================================

# Memory limits (adjust based on your system)
MAX_MEMORY_MB=8192
MAX_WORKERS=4

# ============================================================
# EXTERNAL APIS (Optional)
# ============================================================

# Uncomment if using external APIs
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here

# ============================================================
# DEVELOPMENT
# ============================================================

# Set to 'true' for development mode
DEBUG_MODE=false
RELOAD_ON_CHANGE=false